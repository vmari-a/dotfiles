    kb-secondary-paste:     "Insert";
    kb-clear-line:          "";
    kb-move-front:          "";
    kb-move-end:            "";
    kb-move-word-back:      "";
    kb-move-word-forward:   "";
    kb-move-char-back:      "Left";
    kb-move-char-forward:   "Right";

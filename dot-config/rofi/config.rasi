    kb-remove-char-forward: "Delete";
    kb-remove-char-back:    "BackSpace";
    kb-remove-to-eol:       "";
    kb-remove-to-sol:       "";
    kb-accept-entry:        "Return";
    kb-accept-custom:       "";
    kb-accept-custom-alt:   "";
    kb-accept-alt:          "Alt+Return";
    kb-delete-entry:        "";
    kb-mode-previous:       "";
    kb-mode-complete:       "";
    kb-row-left:            "Control+Left";
    kb-row-right:           "Control+Right";
    kb-row-up:              "Up";
    kb-row-down:            "Down";
    kb-row-tab:             "";
    kb-page-prev:           "";
    kb-page-next:           "";
    kb-row-first:           "";
    kb-row-last:            "";
    kb-row-select:          "";
    kb-screenshot:          "";
    kb-ellipsize:           "";
    kb-toggle-case-sensitivity: "";
    kb-toggle-sort:         "";
    kb-custom-1:            "";
    kb-custom-2:            "";

configuration {
    modi:                   "drun,window,run";
    font:                   "Fira Sans 14";
    location:               7;
    yoffset:                -30;
    fixed-num-lines:        false;
    show-icons:             true;

    display-run:            "cmd";
    display-window:         "wnd";
    display-drun:           "app";

    kb-mode-next:           "Tab";
    kb-cancel:              "Escape";

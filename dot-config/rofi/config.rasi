    kb-select-4:            "";
    kb-select-5:            "";
    kb-select-6:            "";
    kb-select-7:            "";
    kb-select-8:            "";
    kb-select-9:            "";
    kb-select-10:           "";

    drun-display-format:    "{name}";
    window-format:          "{w} {t}";

    timeout {
        action: "kb-cancel";
        delay:  0;
    }
}

@theme "mafalda"

